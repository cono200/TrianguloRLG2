<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Triangulo_RLG.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Triangulo." HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Base"/>
        <Entry Placeholder="Base" x:Name="Base" Keyboard="Numeric"/>
        <Label Text="Altura"/>
        <Entry Placeholder="Altura" x:Name="Altura" Keyboard="Numeric"/>
        <Entry Placeholder="Area" x:Name="Area" Keyboard="Numeric" IsEnabled="False"/>

        <Label Text="Lados"/>
        <Entry Placeholder="Lado1" x:Name="Lado1" Keyboard="Numeric"/>
        <Entry Placeholder="Lado2" x:Name="Lado2" Keyboard="Numeric"/>


        <Button Text="Calcular" Clicked="Button_Clicked"/>
        <Image Source="equilatero.png" HeightRequest="100" WidthRequest="100" x:Name="imgequlilatero" IsVisible="false"/>
        <Image Source="isoceles.png" HeightRequest="100" WidthRequest="100" x:Name="imgisoceles" IsVisible="false"/>
        <Image Source="escaleno.png" HeightRequest="100" WidthRequest="100" x:Name="imgescaleno" IsVisible="false"/>
    </StackLayout>

</ContentPage>